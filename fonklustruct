#include <stdio.h>
#include <stdlib.h>


 struct ogrenci{
 	char isim[10];
 	char soyisim[10];
	int yas;
 };

 void goster(struct ogrenci a) {
		
	printf("ogrenci bilgileri: %s %s %d", a.isim, a.soyisim, a.yas);
}

  int main() {
	
	struct ogrenci ogr= {"tugba", "yildiz", 21};
	
    goster(ogr);
	
	return 0;
}


